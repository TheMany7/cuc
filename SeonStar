  <script>
    function calculate() {
      const baseAtk = Number(document.getElementById('baseAtk').value);
      const totalStat = Number(document.getElementById('totalStat').value);
      const totalCritDmg = Number(document.getElementById('totalCritDmg').value);

      // ê¸°ë³¸ ì¹˜ëª…íƒ€ ë°ë¯¸ì§€ = ì´ ì¹˜ëª…íƒ€ ë°ë¯¸ì§€ - (ì¹˜ëª…íƒ€ ìŠ¤í…Ÿ Ã— 5)
      // ìµœì  ìŠ¤í…Ÿ ë¶„ë°°ë¥¼ ìœ„í•´ ë°˜ë³µ
      let maxTotalDmg = 0;
      let bestAtkStat = 0;
      let bestCritStat = 0;
      let bestCritDmg = 0;
      let bestFlatAtk = 0;

      for (let atkStat = 0; atkStat <= totalStat; atkStat++) {
        const critStat = totalStat - atkStat;
        const flatAtk = baseAtk + atkStat;
        const critDmg = totalCritDmg - (totalStat * 5) + (critStat * 5); // ë³´ì •
        const totalDmg = flatAtk * (1 + critDmg / 100);

        if (totalDmg > maxTotalDmg) {
          maxTotalDmg = totalDmg;
          bestAtkStat = atkStat;
          bestCritStat = critStat;
          bestCritDmg = critDmg;
          bestFlatAtk = flatAtk;
        }
      }

      document.getElementById('result').innerText = `
âœ… ìµœì  ìŠ¤í…Ÿ ë¶„ë°° (ì´ ${totalStat} ìŠ¤í…Ÿ ê¸°ì¤€)
- ê³µê²©ë ¥ ìŠ¤í…Ÿ: ${bestAtkStat}
- ì¹˜ëª…íƒ€ ë°ë¯¸ì§€ ìŠ¤í…Ÿ: ${bestCritStat}

ğŸ“Œ ì¼ë°˜ ê³µê²©ë ¥ (ìŠ¤í…Ÿ ì ìš© í¬í•¨): ${bestFlatAtk}
ğŸ“Œ ìµœì¢… ì¹˜ëª…íƒ€ ë°ë¯¸ì§€: ${bestCritDmg}%

ğŸ”¥ ì˜ˆìƒ ì´ ê³µê²©ë ¥ (ì¹˜ëª…íƒ€ 100%): ${maxTotalDmg.toFixed(2)}
      `;
    }
  </script>

